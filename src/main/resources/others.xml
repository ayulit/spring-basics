<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">
	
	<bean id="client" class="com.yet.spring.core.beans.Client">
		<constructor-arg value="1"/>
		<constructor-arg value="Obi Wan"/>
		<property name="greeting" value=" May the Force be with you!"/>
	</bean>
		
	<bean id="app" class="com.yet.spring.core.App">
		<constructor-arg ref="client"/>
		<constructor-arg ref="cacheFileEventLogger"/>
	</bean>
	
	<bean id="event" class="com.yet.spring.core.beans.Event" scope="prototype">
		<constructor-arg>
			<bean class="java.util.Date"/>
		</constructor-arg>
		<constructor-arg ref="dateFormat"/>
		<property name="msg" value="Invitation for user 1"></property>	
	</bean>
	
	<bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
					 			
</beans>



