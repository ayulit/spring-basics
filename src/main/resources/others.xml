<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		">
	
	<bean id="client" class="com.yet.spring.core.beans.Client">
		<constructor-arg value="${id}"/>
		<constructor-arg value="${name}"/>
		<property name="greeting" value="${greeting}"/>
	</bean>
	
	<bean id="event" class="com.yet.spring.core.beans.Event" scope="prototype">
		<constructor-arg>
			<bean class="java.util.Date"/>
		</constructor-arg>
		<constructor-arg ref="dateFormat"/>		
	</bean>
	
	<bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
	
	<!-- this is special utility bean which will read all the properties files -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<!-- all file for uploading list -->
		<property name="locations">
			<list>
				<value>classpath:client.properties</value>
			</list>		
		</property>
		<!-- so exception will not be thrown, when resources are optional --> 
		<property name="ignoreResourceNotFound" value="true"/>
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
	</bean>
					 			
</beans>



